#--------------------------------------------------------------------------
# Configurações da Aplicação
#--------------------------------------------------------------------------
# Nome da sua aplicação.
APP_NAME=MANAGER

# Ambiente da aplicação (local, development, staging, production).
APP_ENV=PRODUCTION

# Chave de criptografia da aplicação. Deve ser uma string aleatória de 36 caracteres.
APP_KEY=d87140dc-92fd-11f0-9d9f-fc4596f8a36d
APP_TOKEN=28bfa817-55b6-11f0-8e0d-fc4596f8a36d

# Ativa ou desativa o modo de depuração.
# ATENÇÃO: NUNCA deixe como 'true' em produção!
APP_DEBUG=false
MONITORING_QUERY=false # Ativa o monitoramento de queries SQL

# URL base da sua aplicação.
APP_URL=http://localhost:8080

# Fuso horário padrão da aplicação.
# Veja: https://www.php.net/manual/en/timezones.php
APP_TIMEZONE=America/Sao_Paulo

# Idioma padrão da aplicação (ex: pt_BR, en)
APP_LOCALE=pt_BR

# Autenticação de usuários
STATIC_AUTHETICATION=true

# Validade Limite da sessão de autenticação
AUTHENTICATION_SESSION_LIMIT=3600 # 3600 em segundos (1 hora)

#--------------------------------------------------------------------------
# Configurações do Banco de Dados
#--------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=manager
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=mng_ # Prefixo opcional para as tabelas
# DB_ENGINE=InnoDB # Motor de armazenamento padrão (geralmente InnoDB para MySQL)

DB_SAAS_CONNECTION=mysql
DB_SAAS_HOST=127.0.0.1
DB_SAAS_PORT=3306
DB_SAAS_DATABASE=manager_saas
DB_SAAS_USERNAME=root
DB_SAAS_PASSWORD=
DB_SAAS_CHARSET=utf8mb4
DB_SAAS_COLLATION=utf8mb4_unicode_ci
DB_SAAS_PREFIX=mng_ # Prefixo opcional para as tabelas

# Para SQLite, você usaria algo como:
# DB_CONNECTION=sqlite
# DB_DATABASE=/caminho/absoluto/para/seu/database.sqlite

# Para PostgreSQL:
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=meu_banco_de_dados
# DB_USERNAME=postgres
# DB_PASSWORD=sua_senha_do_banco
# DB_CHARSET=utf8
# DB_PREFIX=
# DB_SCHEMA=public

#--------------------------------------------------------------------------
# Configurações de Cache
#--------------------------------------------------------------------------
# Drivers suportados: file, database, apc, memcached, redis, array
CACHE_DRIVER=file
# CACHE_PREFIX=${APP_NAME}_cache # Prefixo para as chaves de cache

# Para Redis:
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# REDIS_DB=0 # Banco de dados Redis a ser usado

# Para Memcached:
# MEMCACHED_HOST=127.0.0.1
# MEMCACHED_PORT=11211
# MEMCACHED_USERNAME=
# MEMCACHED_PASSWORD=

#--------------------------------------------------------------------------
# Configurações de Sessão
#--------------------------------------------------------------------------
# Drivers suportados: file, cookie, database, apc, memcached, redis, array
SESSION_DRIVER=file
SESSION_LIFETIME=120 # Tempo de vida da sessão em minutos
SESSION_ENCRYPT=false # Criptografar dados da sessão
SESSION_COOKIE=${APP_NAME}_session # Nome do cookie da sessão
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false # Enviar cookie de sessão apenas sobre HTTPS

#--------------------------------------------------------------------------
# Configurações de Fila (Queue)
#--------------------------------------------------------------------------
# Drivers suportados: sync, database, beanstalkd, sqs, redis, null
QUEUE_CONNECTION=sync # 'sync' executa jobs imediatamente (bom para desenvolvimento)

# Para Redis (como fila):
# QUEUE_CONNECTION=redis
# REDIS_QUEUE=default # Nome da fila padrão no Redis

#--------------------------------------------------------------------------
# Configurações de E-mail (Mailer)
#--------------------------------------------------------------------------
# Drivers suportados: smtp, sendmail, mailgun, ses, postmark, log, array
MAIL_MAILER=smtp
MAIL_AUTH=true
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=keepcambiante@gmail.com
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls # Pode ser 'tls', 'ssl' ou null
MAIL_FROM_ADDRESS=keepcambiante@gmail.com
MAIL_FROM_NAME=Keep Cambiante

# Para usar o Sendmail:
# MAIL_MAILER=sendmail
# MAIL_SENDMAIL_PATH="/usr/sbin/sendmail -bs"

# Para logar e-mails em vez de enviar (útil para desenvolvimento):
# MAIL_MAILER=log

MAIL_SERVICE=false # Ativa o serviço de envio de e-mails

#--------------------------------------------------------------------------
# Configurações de Log
#--------------------------------------------------------------------------
# Canais de log disponíveis: stack, single, daily, slack, syslog, errorlog, null
# 'stack' permite combinar múltiplos canais.
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null # Canal para logs de depreciação
LOG_LEVEL=debug # Nível mínimo de log (debug, info, notice, warning, error, critical, alert, emergency)

# Se LOG_CHANNEL=daily:
# LOG_DAILY_DAYS=14 # Número de dias para manter os arquivos de log

DIR_FILE_LOG=/Temp/Logs

#--------------------------------------------------------------------------
# Serviço de Autenticação do Manager
#--------------------------------------------------------------------------
# token de autenticação genérico do Manager
API_MANAGER_TOKEN=U0JBRE1JTiAtIEdFTkVSSUMgVE9LRU4=
API_MANAGER_URL=http://localhost:8080/auth

